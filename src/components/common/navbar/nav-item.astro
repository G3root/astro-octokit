---
export interface Props {
  href: string;
  text: string;
}

const { href, text } = Astro.props;
const pathname = new URL(Astro.request.url).pathname;
---

<a
  href={href}
  aria-current={`${pathname === href ? "page" : "false"}`}
  class:list={[
    "p-1 sm:px-3 sm:py-2 rounded-lg transition-all hover:bg-secondary-hover",
    pathname === href ? "font-semibold" : "text-secondary",
  ]}
>
  {text}
</a>
